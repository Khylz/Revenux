{% extends 'base.html.twig' %}

{% block title %}Détails de la Période{% endblock %}

{% block body %}
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="row w-100">
            <div class="col-md-8 mx-auto">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white text-center">
                        <h1 class="card-title mb-0">Détails de la Période</h1>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><strong>Id:</strong> {{ period.id }}</p>
                        <p class="card-text"><strong>Nom de la Période:</strong> {{ period.periodName }}</p>
                        <p class="card-text"><strong>Date de Début:</strong> {{ period.startDate ? period.startDate|date('d/m/Y') : '' }}</p>
                        <p class="card-text"><strong>Date de Fin:</strong> {{ period.endDate ? period.endDate|date('d/m/Y') : '' }}</p>
                        <p class="card-text"><strong>Type de Période:</strong> {{ period.periodType }}</p>
                        <p class="card-text"><strong>Date de Création:</strong> {{ period.creationDate ? period.creationDate|date('d/m/Y H:i:s') : '' }}</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center bg-light">
                        <a href="{{ path('app_period_index') }}" class="btn btn-secondary">Retour à la liste</a>
                        <a href="{{ path('app_period_edit', {'id': period.id}) }}" class="btn btn-warning">Modifier</a>
                        {{ include('period/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 