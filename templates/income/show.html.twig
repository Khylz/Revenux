{% extends 'base.html.twig' %}

{% block title %}Détails du Revenu{% endblock %}

{% block body %}
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="row w-100">
            <div class="col-md-8 mx-auto">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white text-center">
                        <h1 class="card-title mb-0">Détails du Revenu</h1>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><strong>Id:</strong> {{ income.id }}</p>
                        <p class="card-text"><strong>Période:</strong> {{ income.period.periodName }}</p>
                        <p class="card-text"><strong>Catégorie:</strong> {{ income.incomeCategory ? income.incomeCategory.categoryName : 'Non catégorisé' }}</p>
                        <p class="card-text"><strong>Description:</strong> {{ income.description | default('N/A') }}</p>
                        <p class="card-text"><strong>Montant:</strong> {{ income.amount|format_currency('EUR', locale='fr') }}</p>
                        <p class="card-text"><strong>Date du Revenu:</strong> {{ income.incomeDate ? income.incomeDate|date('d/m/Y') : '' }}</p>
                        <p class="card-text"><strong>Date de Création:</strong> {{ income.creationDate ? income.creationDate|date('d/m/Y H:i:s') : '' }}</p>
                        <p class="card-text"><strong>Date de Modification:</strong> {{ income.modificationDate ? income.modificationDate|date('d/m/Y H:i:s') : '' }}</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center bg-light">
                        <a href="{{ path('app_income_index') }}" class="btn btn-secondary">Retour à la liste</a>
                        <a href="{{ path('app_income_edit', {'id': income.id}) }}" class="btn btn-warning">Modifier</a>
                        {{ include('income/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 