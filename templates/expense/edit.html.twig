{% extends 'base.html.twig' %}

{% block title %}Modifier une dépense{% endblock %}

{% block body %}
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="row w-100">
            <div class="col-md-8 mx-auto">
                <div class="card shadow-sm">
                    <div class="card-header bg-danger text-white text-center">
                        <h1 class="card-title mb-0">Modifier une dépense</h1>
                    </div>
                    <div class="card-body">
                        {{ include('expense/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center bg-light">
                        <a href="{{ path('app_expense_index') }}" class="btn btn-secondary">Retour à la liste</a>
                        {{ include('expense/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 