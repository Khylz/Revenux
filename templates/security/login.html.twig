{% extends 'base.html.twig' %}

{% block title %}Gestion de Revenus : Connexion{% endblock %}

{% block body %}
<div class="modal fade show" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true" style="display: block;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="loginModalLabel">Connexion</h5>
                <a href="{{ path('app_home') }}" type="button" class="btn-close" aria-label="Close"></a>
            </div>
            <div class="modal-body">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    {% endif %}
                    
                    <div class="mb-3">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" autocomplete="email" required autofocus>
                    </div>
                    
                    <div class="mb-3">
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" type="submit">Se connecter</button>
                    </div>

                    <div class="text-center mt-3">
                        <p class="mb-0">Pas encore inscrit ? <a href="{{ path('app_register') }}" class="text-decoration-none">Créer un compte</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal-backdrop fade show"></div>

<style>
.modal-dialog {
    max-width: 400px;
}

.modal-content {
    border-radius: 12px;
    border: none;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
}

.modal-header {
    padding: 1.25rem 1.25rem 0.5rem;
}

.modal-body {
    padding: 1.25rem;
}

.form-control {
    border-radius: 6px;
    padding: 0.5rem 0.75rem;
    font-size: 0.9rem;
    border: 1px solid #e0e0e0;
}

.form-control:focus {
    box-shadow: 0 0 0 0.15rem rgba(0,123,255,0.1);
    border-color: #80bdff;
}

.btn-primary {
    border-radius: 6px;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    font-weight: 500;
    background-color: #0d6efd;
    border: none;
}

.btn-primary:hover {
    background-color: #0b5ed7;
}

.modal-title {
    font-size: 1.25rem;
    font-weight: 500;
}

.text-decoration-none {
    color: #0d6efd;
}

.text-decoration-none:hover {
    color: #0b5ed7;
}

.alert-danger {
    font-size: 0.9rem;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    margin-bottom: 1rem;
}
</style>
{% endblock %}
